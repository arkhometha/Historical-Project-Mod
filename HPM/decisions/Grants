	will_give = {
		alert = no
		potential = {
			ai = no
			NOT = { has_country_flag = will_give_grants }
			}

		allow = { NOT = { has_country_flag = will_give_grants } }
		effect = {
			set_country_flag = will_give_grants
		}
	}


	will_not_give = {
		alert = no
		potential = {
			ai = no
			has_country_flag = will_give_grants
		}
		
		allow = { 
			ai = no
			has_country_flag = will_give_grants }
		effect = {
			clr_country_flag = will_give_grants 
			}
	}
